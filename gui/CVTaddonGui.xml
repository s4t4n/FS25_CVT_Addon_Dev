<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">

	<GuiElement profile="newLayer" />
	<Bitmap profile="dialogFullscreenBg"/>

	<GuiElement profile="fs25_dialogBg" id="dialogElement" size="1800px 900px">
		<ThreePartBitmap profile="fs25_dialogBgMiddleSmall"/>
		<ThreePartBitmap profile="fs25_dialogBgTopSmall"/>
		<ThreePartBitmap profile="fs25_dialogBgBottom"/>

		<GuiElement profile="fs25_dialogContentContainer" id="settingsContainer">
			<Bitmap profile="fs25_settingsTooltipSeparator" position="100px 0px" width="5px" />
			<!-- <Bitmap profile="fs25_settingsTooltipSeparator" position="100px 0px" /> -->
			<Bitmap profile="fs25_settingsTooltipSeparator" position="600px -50px" height="680px" />
			<Bitmap profile="fs25_settingsTooltipSeparator" position="950px -50px" height="680px" />
			<Bitmap profile="fs25_settingsTooltipSeparator" position="1760px 0px" width="5px" />
			<Bitmap profile="fs25_startClipper" name="topClipper" />
			<Bitmap profile="fs25_stopClipper" name="bottomClipper" />
			
			<!-- HEADER -->
			<GuiElement profile="fs25_menuHeaderPanel">
				<Text typeClass="TEXT" profile="dialogHeaderText" textAutoSize="true" id="guiTitle" position="0px -20px" />
				<Text typeClass="TEXT" profile="versionText" textAutoSize="true" id="guiModVersion" position="1600px -30px" />
				<Text typeClass="TEXT" profile="versionText" textAutoSize="true" id="guiModBuild" position="1600px -45px" />
				<Text typeClass="TEXT" profile="dialogTitle" textAutoSize="true" id="guiUnderTitle" position="-100px -95px" />
			</GuiElement>

			<!-- SETTINGS -->
			<!-- ScrollingLayout mit ID (für Slider-Verknüpfung) -->
			<ScrollingLayout 
				profile="fs25_settingsLayout"
				id="scrollingLayout"
				topClipperElementName="topClipper"
				bottomClipperElementName="bottomClipper"
				position="10px -50px"
				width="1560px"
				height="680px"
			>

				<!-- CVT CONFIG VARIANT -->
				<Text profile="fs25_settingsSectionHeader" name="sectionVariant" id="variant"/>
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="variantTitle" text="$l10n_CVTAgui_Variant"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="variantSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="variantTT" position="700px 0px"/>
					</MultiTextOption>	
				</GuiElement>
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="startWithClutchSettingTitle"/>
					<!-- <BinaryOption profile="fs25_settingsBinaryOption" id="startWithClutchSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="startWithClutchSettingTT" position="700px 0px"/>
					</BinaryOption>	 -->
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="startWithClutchSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="startWithClutchSettingTT" position="700px 0px"/>
					</MultiTextOption>
				</GuiElement>
				
				<!-- IPM -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="ipmTitle"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="ipmSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="ipmTT" position="700px 0px"/>
					</MultiTextOption>	
				</GuiElement>
			
				<!-- DRIVING LEVEL -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="drivinglevelTitle"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="drivinglevelSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="drivinglevelTT" position="700px 0px"/>
					</MultiTextOption>	
				</GuiElement>

				<!-- DLC -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="drivingLevelStateTitle"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="drivingLevelStateSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="drivingLevelStateTT" position="700px 0px"/>
					</MultiTextOption>	
				</GuiElement>
			
				<!-- ACC RAMP -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="accRampTitle"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="accRampSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="accRampTT" position="700px 0px"/>
					</MultiTextOption>	
				</GuiElement>
				
				<Text profile="fs25_settingsSectionHeader" name="sectionAdditionalFuncs" id="additionalFuncs"/>
				
				<!-- BRAKE FORCE -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" textAutoSize="true" id="brakeForceCorrectionTitle"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="brakeForceCorrectionSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="brakeForceCorrectionTT" position="700px 0px"/>
					</MultiTextOption>
				</GuiElement>

				<!-- AS -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="antiSlipTitle"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="antiSlipSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="antiSlipTT" position="700px 0px"/>
					</BinaryOption>	
				</GuiElement>

				<!-- PIT -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="pitTitle"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="pitSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="pitTT" position="700px 0px"/>
					</BinaryOption>	
				</GuiElement>
			
				<!-- HST -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="HSTTitle"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="HSTSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="HSTTT" position="700px 0px"/>
					</BinaryOption>
				</GuiElement>
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="HSTshuttleTitle"/>
					<!-- <BinaryOption profile="fs25_settingsBinaryOption" id="HSTshuttleStateSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="HSTshuttleStateSettingTT" position="700px 0px"/>
					</BinaryOption> -->
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="HSTshuttleStateSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="HSTshuttleStateSettingTT" position="700px 0px"/>
					</MultiTextOption>
				</GuiElement>
				
				<!-- INCHING -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="inchingTitle"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="inchingSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="inchingTT" position="700px 0px"/>
					</BinaryOption>
				</GuiElement>

				<!-- REVERSE LIGHTS -->
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="reverseLightsTitle"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="reverseLightsSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="reverseLightsTT" position="700px 0px"/>
					</BinaryOption>
				</GuiElement>
				
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="reverseLightsDurationTitle"/>
					<MultiTextOption profile="fs25_settingsMultiTextOption" id="reverseLightsDurationSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="reverseLightsDurationTT" position="700px 0px"/>
					</MultiTextOption>
				</GuiElement>
				
				<!-- HUD -->
				<Text profile="fs25_settingsSectionHeader" name="sectionCvtHud" id="Cvthud"/>
				
				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="CvthudTitle" text="$l10n_cvtgui_Cvthud"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="CvtHUDSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="CvthudTT" position="700px 0px"/>
					</BinaryOption>	
				</GuiElement>

				<GuiElement profile="fs25_multiTextOptionContainer">
					<Text profile="multiTextOptionSettingsTitle" id="CvthudPos" text="$l10n_CVTAgui_CvthudPos"/>
					<BinaryOption profile="fs25_settingsBinaryOption" id="CvthudPosSetting">
						<Text profile="fs25_multiTextOptionTooltip" name="ignore" id="CvthudPOSTT" position="700px 0px"/>
					</BinaryOption>	
				</GuiElement>

				<Text profile="dialogHeaderText"/>
			</ScrollingLayout>

			<!-- SCROLL SLIDER – korrekt angedockt -->
			<Slider 
			    profile="fs25_sliderDocked"
			    dataElementId="scrollingLayout"
			    position="1764px 0px"
			    height="818px"
			/>

			<!-- FOOTER -->
			<BoxLayout profile="fs25_dialogButtonBox" position="0px 0px" size="100% 80px" alignment="center">
				

				<Button profile="buttonDelete" id="repairButton" text="$l10n_button_cvtrepair" onClick="onButtonRepair"/>
				<Button profile="buttonCancel" id="resetButton" text="Load" onClick="onButtonLoad"/>
				<!-- <Bitmap profile="fs25_dialogButtonBoxSeparator"/> -->
			</BoxLayout>
			<!-- Adminbereich extra -->
			<BoxLayout profile="fs25_dialogButtonBox" position="0px -40px">
				<Button profile="buttonBack" id="noButton" text="$l10n_button_back" onClick="onClickBack"/>
				<Bitmap profile="fs25_dialogButtonBoxSeparator"/>

				<Button profile="buttonOK" id="yesButton" text="$l10n_button_ok" onClick="onClickOk"/>
				<Bitmap profile="fs25_dialogButtonBoxSeparator"/>

				<Button profile="buttonBlock" id="adminLoginButton" text="Admin Login" onClick="onClickAdminLogin"/>
			</BoxLayout>
		</GuiElement>
	</GuiElement>
</GUI>
